<main class="col-8">
    <section class="d-flex justify-content-between ">
        <div class="">
            <h1 class="fs-2">Artikel Terbaru</h1>
        </div>
        <div class="w-50  row  justify-content-end">
            <label for="SearchInput" class="col-sm-2 col-form-label my-auto">Search</label>
            <div class="col-sm-10 w-50  my-auto">
                <input type="text" class="form-control h-50 " id="SearchInput">
            </div>
        </div>
    </section>
    <section class="mt-4" role="article">
        @foreach (var item in Model)
            {
                <article>
                    <a asp-action="Details" asp-controller="Article" asp-route-id="@item.id" style="text-decoration:none;">
                        <div class="card mb-4 text-black" >
                            <div class="row g-0">
                                <div class="col-md-4">
                                <img src="~/img/@item.featured_image" class="img-fluid rounded-start" alt="...">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title mb-4">@item.title</h5>
                                        <p class="card-text mb-4">@item.excerpt</p>
                                        <div class="card-text d-flex justify-content-between">
                                            <small class="text-muted">@item.author</small>
                                            <small class="text-muted">@item.publish_date.ToString("dd/MM/yyyy")</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </article>
            }  
    </section>
</main>
