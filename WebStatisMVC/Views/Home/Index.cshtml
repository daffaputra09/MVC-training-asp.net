@model IEnumerable<WebStatisMVC.Models.Articles>
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .card, .mostview{
        transition: transform 0.2s ease-in-out;
    }
    .card:hover, .mostview:hover{
        transform: scale(1.0125);
    }
/*    .side{
